{
  "name": "ts-starter",
  "version": "1.0.0",
  "description": "Get started with a new TypeScript project in a breeze ðŸ’¨",
  "main": "index.ts",
  "scripts": {
    "build": "yarn lint && tsc",
    "start": "ts-node index.ts",
    "clean": "rm -rf node_modules/ dist/",
    "precommit": "lint-staged",
    "postinstall": "husky install",
    "check-tsc": "tsc --noEmit",
    "lint": "eslint --ext ts --ext tsx ./",
    "lint:fix": "eslint --quiet --fix --ext ts --ext tsx ./",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gobbees/ts-starter.git"
  },
  "author": "Giovanni Gobbi <gobbees@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gobbees/ts-starter/issues"
  },
  "homepage": "https://github.com/Gobbees/ts-starter#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.48.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint",
      "prettier --write"
    ]
  }
}
